<div class='d-flex justify-content-center'>
  <div class='card w-50 p-5'>
    <h1>
      Ingresa tu email
    </h1>
    <form action='/api/users/github/callback' method='POST' id='login_form'>
      <div class='row mb-3'>
        <div class='col-12 my-4'>
          <label class='form-label' for='email'>
            Email
          </label>
          <input
            class='form-control'
            id='email'
            type='text'
            name='email'
            placeholder='Ingrese su correo electrónico'
          />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='password'>
            Contraseña
          </label>
          <input
            class='form-control'
            id='password'
            type='password'
            name='password'
          />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='confirm_password'>
            Confirmar contraseña
          </label>
          <input
            class='form-control'
            id='confirm_password'
            type='password'
            name='confirm_password'
          />
        </div>
      </div>
      <button class='btn btn-lg btn-primary btn-block mb-4' type='submit'>
        Enviar
      </button>
      <div class='card-footer d-flex flex-column'>
        <span class='mb-1'>
          ¿Ya tienes una cuenta?
          <a class='ml-2' href='/login'>
            Iniciar sesión
          </a>
        </span>
      </div>
    </form>
  </div>
</div>
