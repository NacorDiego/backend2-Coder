<div class="d-flex justify-content-center">
  <di class='card w-50 w-md-100 p-5'>
    <h1>
      Registrarse
    </h1>
    <form action="/api/users/register" method="POST" id='register_form'>
      <div class='row mb-3'>
        <div class='col-12 mb-3'>
          <label class='form-label' for='first_name'>
            Nombre
          </label>
          <input
            class='form-control'
            id='first_name'
            type='text'
            name='first_name'
            placeholder="Ingrese todos en caso de tener más de uno"
            value="{{dataUser.first_name}}"
          />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='last_name'>
            Apellido
          </label>
          <input
            class='form-control'
            id='last_name'
            type='text'
            name='last_name'
            placeholder="Ingrese todos en caso de tener más de uno"
            value="{{dataUser.last_name}}"
          />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='email'>
            Email
          </label>
          <input class='form-control' id='email' type='text' name='email' placeholder="Ingrese su correo electrónico" value="{{dataUser.email}}" />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='age'>
            Edad
          </label>
          <input class='form-control' id='age' type='text' name='age' placeholder="Solo números indicando la cantidad de años" value="{{dataUser.age}}" />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='password'>
            Contraseña
          </label>
          <input
            class='form-control'
            id='password'
            type='password'
            name='password'
          />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='confirm_password'>
            Confirmar contraseña
          </label>
          <input
            class='form-control'
            id='confirm_password'
            type='password'
            name='confirm_password'
          />
        </div>
      </div>

      <button class='btn btn-lg btn-primary btn-block mb-4' type='submit'>
        Enviar
      </button>
      <div class='card-footer d-flex flex-column'>
        <span class="mb-1">
          ¿Ya tienes una cuenta?
          <a class="ml-2" href='/login'>
            Iniciar sesión
          </a>
        </span>
        <span>
          ¿Tenés cuenta de Github?
          <a class="ml-2" href='/login-github'>
            Iniciar sesión con Github
          </a>
        </span>
      </div>
    </form>
</div>
