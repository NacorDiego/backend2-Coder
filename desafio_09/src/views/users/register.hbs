<div class="d-flex justify-content-center">
  <di class='card w-50 p-5'>
    <h1>
      Registrarse
    </h1>
    <form id='register_form'>
      <div class='row mb-3'>
        <div class='col-12 mb-3'>
          <label class='form-label' for='first_name'>
            Nombre
          </label>
          <input
            class='form-control'
            id='first_name'
            type='text'
            name='first_name'
            placeholder="Ingrese todos en caso de tener más de uno"
          />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='last_name'>
            Apellido
          </label>
          <input
            class='form-control'
            id='last_name'
            type='text'
            name='last_name'
            placeholder="Ingrese todos en caso de tener más de uno"
          />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='email'>
            Email
          </label>
          <input class='form-control' id='email' type='text' name='email' placeholder="Ingrese su correo electrónico" />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='age'>
            Edad
          </label>
          <input class='form-control' id='age' type='text' name='age' placeholder="Solo números indicando la cantidad de años" />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='password'>
            Contraseña
          </label>
          <input
            class='form-control'
            id='password'
            type='password'
            name='password'
          />
        </div>
        <div class='col-12 mb-3'>
          <label class='form-label' for='confirm_password'>
            Confirmar contraseña
          </label>
          <input
            class='form-control'
            id='confirm_password'
            type='password'
            name='confirm_password'
          />
        </div>
      </div>

      <div class='row align-items-center px-3'>
        <button class='btn btn-lg btn-primary ms-2' type='submit'>
          Enviar
        </button>
        <span class='ml-auto'>
          ¿Ya tienes una cuenta?
          <a href='/api/users/login'>
            Ingresá aquí
          </a>
        </span>
      </div>
    </form>
  </di class="d-flex justify-content-center"v>
</div>

<script src='/js/register.js'></script>
